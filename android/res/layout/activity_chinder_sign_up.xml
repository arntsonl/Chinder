<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.chinderapp.chinder.ChinderSignUpActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#111111"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="#ff72efd2"
            android:ems="10"
            android:id="@+id/firstnameEditText"
            android:hint="First Name"
            android:textColorHint="#ffffffff"
            android:editable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxLength="25"
            android:inputType="textPersonName"
            android:layout_alignRight="@+id/chinder_button"
            android:layout_alignEnd="@+id/chinder_button" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:drawableBottom="#ff72efd2"
            android:ems="10"
            android:id="@+id/emailAddressEditText"
            android:hint="Email Address"
            android:textColorHint="#ffffffff"
            android:editable="true"
            android:layout_below="@+id/firstnameEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/firstnameEditText"
            android:layout_alignEnd="@+id/firstnameEditText"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:drawableBottom="#ff72efd2"
            android:ems="10"
            android:id="@+id/passwordEditText"
            android:hint="Password"
            android:textColorHint="#ffffffff"
            android:editable="true"
            android:layout_below="@+id/emailAddressEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:id="@+id/chinder_button"
            android:layout_above="@+id/signUpLegalText"
            android:layout_alignLeft="@+id/passwordEditText"
            android:layout_alignStart="@+id/passwordEditText"
            android:background="@drawable/chinder_button"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:onClick="signupSubmitOnClick"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By creating an account you acknowledge to the Terms of use and you acknowledge that you have read the Privacy Policy."
            android:id="@+id/signUpLegalText"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/chinder_button"
            android:layout_alignStart="@+id/chinder_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Birthday"
            android:id="@+id/signupBirthdayButton"
            android:textSize="16dp"
            android:background="@drawable/chinder_button_white"
            android:textColor="#000000"
            android:layout_below="@+id/passwordEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/passwordEditText"
            android:layout_alignEnd="@+id/passwordEditText"
            android:layout_marginTop="40dp"
            android:onClick="selectBirthdayOnClick" />

    </RelativeLayout>
</RelativeLayout>
