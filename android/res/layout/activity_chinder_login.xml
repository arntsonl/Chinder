<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.chinderapp.chinder.ChinderLoginActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#111111"
        android:padding="20dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableBottom="#ff72efd2"
            android:ems="10"
            android:id="@+id/usernameLoginEditText"
            android:hint="Email"
            android:textColorHint="#ffffffff"
            android:editable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:drawableBottom="#ff72efd2"
            android:ems="10"
            android:id="@+id/passwordLoginEditText"
            android:hint="Password"
            android:textColorHint="#ffffffff"
            android:editable="true"
            android:layout_below="@+id/usernameLoginEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/loginSubmitButton"
            android:layout_alignParentBottom="true"
            android:background="@drawable/chinder_button"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:layout_alignRight="@+id/usernameLoginEditText"
            android:layout_alignEnd="@+id/usernameLoginEditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="48dp"
            android:onClick="loginSubmitOnClick" />

    </RelativeLayout>
</RelativeLayout>
